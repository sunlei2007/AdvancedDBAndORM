    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>CustomerAddress</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
